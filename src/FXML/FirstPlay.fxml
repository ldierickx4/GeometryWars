<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="900.0" prefWidth="900.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FXML.FirstPlayController">
    <stylesheets>
        <URL value="@FXMLSS.css" />
    </stylesheets>
   <children>
      <ImageView fitHeight="150.0" fitWidth="400.0" layoutX="300.0" layoutY="70.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../resources/AstralStrifesTransparent1.png" />
         </image>
      </ImageView>
      <Button layoutX="62.0" layoutY="59.0" mnemonicParsing="false" onAction="#handleBackButton" text="Back" />
