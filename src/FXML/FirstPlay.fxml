         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <RadioButton id="onePlayer" fx:id="onePlayer" layoutX="416.0" layoutY="363.0" mnemonicParsing="false" onAction="#changeSelectedRadio" selected="true" text="One" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="players" />
         </toggleGroup>
      </RadioButton>
      <RadioButton id="twoPlayer" fx:id="twoPlayer" layoutX="517.0" layoutY="363.0" mnemonicParsing="false" onAction="#changeSelectedRadio" text="Two" textFill="WHITE" toggleGroup="$players">
         <font>
            <Font size="18.0" />
         </font>
      </RadioButton>
      <Button id="inloggenButton" fx:id="inloggenButton" layoutX="388.0" layoutY="602.0" mnemonicParsing="false" text="START">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
      <Pane id="PlayerOne" fx:id="PlayerOne" layoutX="170.0" layoutY="402.0" prefHeight="128.0" prefWidth="572.0">
         <children>
            <Label layoutX="14.0" layoutY="57.0" text="Support Drone:" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <RadioButton layoutX="244.0" layoutY="59.0" mnemonicParsing="false" text="Heal" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="Drone" />
               </toggleGroup>
            </RadioButton>
            <RadioButton layoutX="348.0" layoutY="59.0" mnemonicParsing="false" text="Attack" textFill="WHITE" toggleGroup="$Drone">
               <font>
                  <Font size="18.0" />
               </font>
            </RadioButton>
            <RadioButton layoutX="468.0" layoutY="59.0" mnemonicParsing="false" text="Kill" textFill="WHITE" toggleGroup="$Drone">
               <font>
                  <Font size="18.0" />
               </font>
            </RadioButton>
         </children>
      </Pane>
   </children>
</AnchorPane>
